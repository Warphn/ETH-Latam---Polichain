{
  "manifest_version": 3,
  "name": "YT Presence POC",
  "version": "0.1.0",
  "action": { "default_popup": "popup.html" },
  
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": { "service_worker": "sw.js" },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/youtube.js"],
      "run_at": "document_idle"
    }
  ]
}
